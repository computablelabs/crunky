{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "lib": ["es2017"],
    "outDir": "./dist",
    "baseUrl": "./src",
    "noUnusedLocals": true,
    "esModuleInterop": true,
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
